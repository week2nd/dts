<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 
2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions> 
<definition name="homeGuest" template="/WEB-INF/views/homeGuest.jsp"></definition>
<definition name="homeAdmin" template="/WEB-INF/views/homeAdmin.jsp"></definition>
<definition name="homeUser" template="/WEB-INF/views/homeUser.jsp"></definition>

<definition name="user/*/*" extends="homeUser"> 
 <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
</definition> 

<definition name="admin/*/*" extends="homeAdmin"> 
 <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
</definition> 




<!-- 유저 -->
<definition name="mainTemplate" template="/WEB-INF/views/tiles/layout.jsp"> 
<put-attribute name="content" value="/WEB-INF/views/tiles/content.jsp" /> 
</definition> 

<definition name="*/*" extends="mainTemplate"> 
 <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
</definition> 

<definition name="*/*/*" extends="mainTemplate">
<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" /> 
</definition> 
<!-- 게스트 -->
<definition name="guestTemplate" template="/WEB-INF/views/tiles/layout.jsp"> 
<put-attribute name="content" value="/WEB-INF/views/tiles/content.jsp" /> 
</definition> 

<definition name="*/*" extends="userTemplate"> 
 <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
</definition> 

<definition name="*/*/*" extends="userTemplate">
<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" /> 
</definition> 
<!-- 관리자 -->
<definition name="adminTemplate" template="/WEB-INF/views/tiles/layout.jsp"> 
<put-attribute name="content" value="/WEB-INF/views/tiles/content.jsp" /> 
</definition> 

<definition name="*/*" extends="adminTemplate"> 
 <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />  
</definition> 

<definition name="*/*/*" extends="adminTemplate">
<put-attribute name="content" value="/WEB-INF/views/{1}/{2}/{3}.jsp" /> 
</definition> 


</tiles-definitions>